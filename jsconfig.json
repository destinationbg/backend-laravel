{
    "compilerOptions": {
        "checkJs": false,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "target": "es2020",
        "module": "es2015",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*", "resources/js/*"],
            "~/*": ["resources/scss/*"],
            "@resources/*": ["resources/*"]
        }
    },
    "exclude": ["dist", "node_modules", "build", ".vscode", ".nuxt", "coverage", ".npm", ".yarn"],
    "typeAcquisition": {
        "enable": true
    }
}
